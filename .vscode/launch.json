{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug NestJS (Bun)",
        "runtimeExecutable": "bun",
        "runtimeArgs": ["run", "start:debug"],
        "port": 9229,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      },
      {
        "type": "node",
        "request": "attach",
        "name": "Attach to NestJS (Bun)",
        "port": 9229,
        "restart": true,
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  